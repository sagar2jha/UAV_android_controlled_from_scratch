    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ki"/>
    <EditText android:id="@+id/ki" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="none|number|numberSigned|numberDecimal"/>
    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kd"/>
    <EditText android:id="@+id/kd" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="none|number|numberSigned|numberDecimal"/>
    <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ip"/>
    <EditText android:id="@+id/ipaddr" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>
