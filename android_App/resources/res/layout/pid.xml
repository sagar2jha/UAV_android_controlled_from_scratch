<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pidsel"/>
    <Spinner android:id="@+id/pidSelect" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kp"/>
    <EditText android:id="@+id/kp" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="none|number|numberSigned|numberDecimal">
        <requestFocus/>
